.col-3_md-12
  .filter
    .filter__collapsed
      span.filter__label Фильтры
        button.filter__toggler.filter__toggler--collapsed(type="button")
          span.filter__toggler-text-open.filter__toggler-text-open--collapsed Развернуть
          span.filter__toggler-text-close.filter__toggler-text-close--collapsed Свернуть
          span.filter__toggler-icon.filter__toggler-icon--collapsed
            <svg width="9" height="6" viewBox="0 0 11 7" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M1 1l4.5 4L10 1" stroke-width="1.5"/></svg>
    .filter__content
      .filter__block.filter__block--opened
        .filter__visible-part
          span.filter__label Цена
          button.filter__toggler(type="button")
            span.filter__toggler-text-open Развернуть
            span.filter__toggler-text-close Свернуть
            span.filter__toggler-icon
              <svg width="9" height="6" viewBox="0 0 11 7" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M1 1l4.5 4L10 1" stroke-width="1.5"/></svg>
        .filter__hidden-part
          .filter__range(id="slider", ref="slider")
          .filter__range-inputs
            input(type="text" v-model="minRange" v-on:change="updateSlider")
            input(type="text" v-model="maxRange" v-on:change="updateSlider")
      .filter__block.filter__block--opened
        .filter__visible-part
          span.filter__label Бренд
          button.filter__toggler(type="button")
            span.filter__toggler-text-open Развернуть
            span.filter__toggler-text-close Свернуть
            span.filter__toggler-icon
              <svg width="9" height="6" viewBox="0 0 11 7" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M1 1l4.5 4L10 1" stroke-width="1.5"/></svg>
        .filter__hidden-part
          .checkbox.checkbox--filter
            label
              input(type="checkbox" value="Alpen Gold" v-model="brands")
              span Alpen Gold {{ items.filter(item => item.brand === 'Alpen Gold').length }}
          .checkbox.checkbox--filter
            label
              input(type="checkbox" value="Casa Dolcini" v-model="brands")
              span Casa Dolcini {{ items.filter(item => item.brand === 'Casa Dolcini').length }}
          .checkbox.checkbox--filter
            label
              input(type="checkbox" value="Santa Maria" v-model="brands")
              span Santa Maria {{ items.filter(item => item.brand === 'Santa Maria').length }}
      .filter__block.filter__block--opened
        .filter__visible-part
          span.filter__label Особенность
          button.filter__toggler(type="button")
            span.filter__toggler-text-open Развернуть
            span.filter__toggler-text-close Свернуть
            span.filter__toggler-icon
              <svg width="9" height="6" viewBox="0 0 11 7" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M1 1l4.5 4L10 1" stroke-width="1.5"/></svg>
        .filter__hidden-part
          .checkbox.checkbox--filter
            label
              input(type="checkbox" value="С арахисом" v-model="features")
              span С арахисом
          .checkbox.checkbox--filter
            label
              input(type="checkbox" value="Без сахара" v-model="features")
              span Без сахара
  button(type="button", v-show="canResetFilter" @click="resetFilter").filter__reset-btn Сбросить